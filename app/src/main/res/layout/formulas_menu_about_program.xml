<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/about_textView1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Contribution:"
                android:textSize="22sp"
                android:textColor="#000000"
                android:background="@drawable/style_textview_border"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:id="@+id/textView13" />

            <TextView
                android:id="@+id/about_textView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Acknowlegments:"
                android:textSize="22sp"
                android:textColor="#000000"
                android:background="@drawable/style_textview_border"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:id="@+id/textView12" />

            <TextView
                android:id="@+id/about_textView3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="P.S.:"
                android:textSize="22sp"
                android:textColor="#000000"
                android:background="@drawable/style_textview_border"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:id="@+id/textView11" />

            <TextView
                android:id="@+id/about_textView4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textSize="20sp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>